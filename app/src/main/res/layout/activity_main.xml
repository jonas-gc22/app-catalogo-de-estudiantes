<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F5F9"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="60dp">

        <!-- CONTENIDO CON PADDING -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Registro de Estudiantes"
                android:textSize="26sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="#111827"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Universidad Tecnológica de Santiago (UTESA)"
                android:textSize="14sp"
                android:gravity="center"
                android:textColor="#6B7280"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="24dp"/>

            <EditText
                android:id="@+id/etNombre"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:hint="Nombre del estudiante"
                android:padding="12dp"
                android:layout_marginBottom="12dp"/>

            <EditText
                android:id="@+id/etMatricula"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:hint="Matrícula"
                android:inputType="number"
                android:padding="12dp"
                android:layout_marginBottom="12dp"/>

            <Spinner
                android:id="@+id/spCarrera"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="20dp"/>

            <Button
                android:id="@+id/btnRegistrar"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Registrar Estudiante"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:backgroundTint="#4F46E5"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:layout_marginTop="24dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp">

                <ImageView
                    android:id="@+id/imgCarrera"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ingenieria"/>
            </androidx.cardview.widget.CardView>

            <ListView
                android:id="@+id/listViewEstudiantes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:divider="@android:color/transparent"
                android:dividerHeight="8dp"/>

        </LinearLayout>

        <!-- FOOTER FULL WIDTH -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical"
            android:background="#111827"
            android:gravity="center">

            <TextView
                android:text="Equipo de Desarrollo"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginBottom="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="Jonás García Corniel – 1-18-4259"
                android:textColor="#FFF"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="Adonis Rodríguez – 117-4399"
                android:textColor="#FFF"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="Euris Joel Acosta – 1-19-3584"
                android:textColor="#FFF"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="Gabriel Hernández Galván – 2-21-3988"
                android:textColor="#FFF"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="Erik Miguel Gil Cruz – 1-22-5249"
                android:textColor="#FFF"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>